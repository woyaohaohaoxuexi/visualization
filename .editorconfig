root = true

[*]
charset = utf-8
# 结尾换行符 lf: linux/unix 和 新版本 mac 使用这种； crlf: window； cr: 旧版本 mac 使用；
end_of_line = lf
# 缩进的空格数
indent_size = 2
# 缩进风格 "space": 文件占用空间大，但是压缩率高；  "tab": 文件占用空间小，不过压缩率低
indent_style = space
# 文件保存的时候以换行符结尾
insert_final_newline = true
max_line_length = 120
# 缩进风格使用 tab 时，优先使用这个值
tab_width = 2
# 这个值设置为 true 时会将换行符前面的字符删除空格
trim_trailing_whitespace = true

[*.scss]
indent_size = 2

[*.vue]
indent_size = 2
tab_width = 2
